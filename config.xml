<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
	xmlns:gap   = "http://phonegap.com/ns/1.0"
	id          = "com.phonegap.example"
	versionCode = "10"
	version     = "1.0.0">
	<name>Loja Trousseau</name>
	<description>
		Aplicativo do Admin da Adman Criativa
	</description>
	<author href="https://www.admancriativa.com.br" email="henrique.bissoli@admancriativa.com.br">
		Henrique Bissoli
	</author>
	<access origin="*" subdomains="true" browserOnly="true" launch-external="yes" />
	<gap:plugin name="cordova-plugin-whitelist" spec="1.2.2" source="npm" />
	<gap:plugin name="org.apache.cordova.core.inappbrowser" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="tel:*" />
	<allow-intent href="sms:*" />
	<allow-intent href="mailto:*" />
	<allow-intent href="geo:*" />
	
	<platform name="android">
		<allow-intent href="market:*" />
		<access origin="*" subdomains="true" />
		<allow-intent href="*" />
		<allow-navigation href="*" />
		<icon src="img/pequeno.jpg" density="ldpi" />
        <icon src="img/pequeno.jpg" density="mdpi" />
        <icon src="img/medio.jpg" density="hdpi" />
        <icon src="img/medio.jpg" density="xhdpi" />
        <icon src="img/grande.jpg" density="xxhdpi" />
        <icon src="img/grande.jpg" density="xxxhdpi" />
	</platform>
	<platform name="ios">
		<allow-intent href="itms:*" />
		<allow-intent href="itms-apps:*" />
		<icon src="img/grande.jpg" width="180" height="180" />
        <icon src="img/medio.jpg" width="60" height="60" />
        <icon src="img/grande.jpg" width="120" height="120" />
        <icon src="img/grande.jpg" width="76" height="76" />
        <icon src="img/grande.jpg" width="152" height="152" />
        <icon src="img/icon-40.jpg" width="40" height="40" />
        <icon src="img/medio.jpg" width="80" height="80" />
        <icon src="img/medio.jpg" width="57" height="57" />
        <icon src="img/grande.jpg" width="114" height="114" />
        <icon src="img/grande.png" width="72" height="72" />
        <icon src="img/grande.jpg" width="144" height="144" />
        <icon src="img/pequeno.jpg" width="29" height="29" />
        <icon src="img/pequeno.jpg" width="58" height="58" />
        <icon src="img/pequeno.jpg" width="50" height="50" />
        <icon src="img/grande.jpg" width="100" height="100" />
	</platform>
</widget>
